<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Target Name="CompileBeforeBuild" BeforeTargets="Build">
    <Exec Command="clang++ -shared -o glslang/glslang.so -fPIC glslang/glslang.cpp -Iglslang/include -Lglslang/static -lglslangmerged" />
  </Target>

  <Target Name="CompileBeforeRebuild" BeforeTargets="Rebuild">
    <Exec Command="clang++ -shared -o glslang/glslang.so -fPIC glslang/glslang.cpp -Iglslang/include -Lglslang/static -lglslangmerged" />
  </Target>

  <Target Name="CompileBeforeRun" BeforeTargets="Run">
    <Exec Command="clang++ -shared -o glslang/glslang.so -fPIC glslang/glslang.cpp -Iglslang/include -Lglslang/static -lglslangmerged" />
  </Target>

</Project>
